@model MembershipViewModel

@{
    ViewData["Title"] = "Membership";
}

<h1>Membership</h1>

<link href="~/css/app.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="bg"></div>
        <div class="bg bg2"></div>
        <div class="bg bg3"></div>
        <form id="white-text" asp-controller="Account" asp-action="Membership" method="post">
            <div class="form-group">
                <label asp-for="Months"></label>
                <input asp-for="Months" class="form-control" />
                <span asp-validation-for="Months" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="box" type="submit">Create</button><br />
                <strong>
                    <a class="goback" asp-controller="Home" asp-action="Index">Go Back</a>
                </strong>
            </div>
        </form>
    </div>
</div>